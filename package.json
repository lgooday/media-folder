{
    "name": "media-folder",
    "version": "1.0.0",
    "description": "a simple foto folder",
    "repository": {
        "url": "https://github.com/lgooday/media-folder"
    },
    "main": "main.js",
    "scripts": {
        "start": "babel-watch app/main.js",
        "build": "babel -d ./build ./app",
        "test": "cross-env NODE_ENV=test mocha --require babel-register tests/**/**.spec.js",
        "test:w": "cross-env NODE_ENV=test mocha --require babel-register tests/**/**.spec.js --watch --reporter min",
        "test:c": "cross-env NODE_ENV=test nyc mocha --require babel-register tests/**/**.spec.js",
        "xo": "xo"
    },
    "author": "lgooday",
    "license": "ISC",
    "dependencies": {
        "async": "^2.6.0",
        "babel-polyfill": "^6.26.0",
        "better-console": "^1.0.1",
        "bluebird": "^3.5.0",
        "command-line-args": "^5.0.1",
        "exif": "^0.6.0",
        "fs-extra": "^7.0.0",
        "glob": "^7.0.3",
        "lodash": "^4.17.15",
        "md5-file": "^4.0.0",
        "moment": "^2.13.0",
        "mysql": "^2.15.0",
        "nconf": "^0.10.0",
        "oz-mysql": "^0.4.1",
        "path.join": "^1.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-preset-env": "^1.7.0",
        "babel-watch": "^2.0.7",
        "chai": "^4.1.2",
        "cross-env": "^5.2.0",
        "istanbul": "^0.4.5",
        "mocha": "^5.2.0",
        "mock-fs": "^4.6.0",
        "nyc": "^12.0.2",
        "sinon": "^6.1.4",
        "xo": "^0.22.0"
    },
    "xo": {
        "semicolon": false,
        "rules": {
            "capitalized-comments": "off",
            "object-curly-spacing": "off",
            "no-use-extend-native/no-use-extend-native": "off",
            "unicorn/explicit-length-check": "off",
            "promise/param-names": "off",
            "prefer-promise-reject-errors": "off"
        },
        "env": [
            "mocha"
        ]
    }
}
